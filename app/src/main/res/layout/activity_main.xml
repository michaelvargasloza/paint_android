<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="paintandroid.example.michaelvargas.paintandroid.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/anyadir"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_stat_name" />

        <ImageButton
            android:id="@+id/trazo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/trazo" />
        <ImageButton
            android:id="@+id/borrar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/borrar" />
        <ImageButton
            android:id="@+id/guardar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/guardar" />
    </LinearLayout>

    <paintandroid.example.michaelvargas.paintandroid.Lienzo
        android:id="@+id/lienzo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="#FFFFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/colornegro"
            android:layout_width="0dp"
            android:layout_height="@dimen/alturacolor"
            android:layout_weight="1"
            android:background="#FF000000"
            android:tag="#FF000000" />

        <ImageButton
            android:id="@+id/colorblanco"
            android:layout_width="0dp"
            android:layout_height="@dimen/alturacolor"
            android:layout_weight="1"
            android:background="#FFFFFFFF"
            android:tag="#FFFFFFFF" />

        <ImageButton
            android:id="@+id/colorazul"
            android:layout_width="0dp"
            android:layout_height="@dimen/alturacolor"
            android:layout_weight="1"
            android:background="#FF0000FF"
            android:tag="#FF0000FF" />

        <ImageButton
            android:id="@+id/colorrojo"
            android:layout_width="0dp"
            android:layout_height="@dimen/alturacolor"
            android:layout_weight="1"
            android:background="#FFFF0000"
            android:tag="#FFFF0000" />

        <ImageButton
            android:id="@+id/colorverde"
            android:layout_width="0dp"
            android:layout_height="@dimen/alturacolor"
            android:layout_weight="1"
            android:background="#FF00FF00"
            android:tag="#FF00FF00" />
    </LinearLayout>
</LinearLayout>